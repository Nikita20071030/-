  <script>
    document.addEventListener('DOMContentLoaded', function() {
    
      function getRandomDate(start, end) {
        const date = new Date(start.getTime() + Math.random() * (end.getTime() - start.getTime()));
        const day = date.getDate().toString().padStart(2, '0');
        const month = (date.getMonth() + 1).toString().padStart(2, '0');
        const year = date.getFullYear();
        return `${day}.${month}.${year}`;
      }

      
      function getRandomInt(min, max) {
        return Math.floor(Math.random() * (max - min + 1)) + min;
      }

   
      function showNotification(message, isError = false) {
        const notification = document.getElementById('notification');
        notification.textContent = message;
        notification.className = isError ? 'notification error show' : 'notification show';
        
        setTimeout(() => {
          notification.className = 'notification';
        }, 3000);
      }

     
      let products = JSON.parse(localStorage.getItem('products')) || [
        { id: '001', name: '–ú—ã—à–∫–∞ Logitech', category: '–≠–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∞', quantity: 12, min: 5, date: '12.04.2025' },
        { id: '002', name: '–ë—É–º–∞–≥–∞ –ê4', category: '–ö–∞–Ω—Ü—Ç–æ–≤–∞—Ä—ã', quantity: 200, min: 50, date: '10.04.2025' },
        { id: '003', name: '–ú–æ–Ω–∏—Ç–æ—Ä LG', category: '–≠–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∞', quantity: 2, min: 2, date: '08.04.2025' },
        { id: '004', name: '–ö–ª–∞–≤–∏–∞—Ç—É—Ä–∞ Defender', category: '–≠–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∞', quantity: 5, min: 4, date: '06.04.2025' }
      ];

     
      const elements = {
        productTable: document.querySelector('.products-table tbody'),
        alertsList: document.querySelector('.alerts-list'),
        addForm: document.getElementById('add-product-form'),
        navButtons: document.querySelectorAll('.nav-btn'),
        pages: document.querySelectorAll('.page'),
        reportsTable: document.querySelector('.reports-table tbody'),
        generateReportBtn: document.getElementById('generate-report')
      };

      
      function saveProducts() {
        localStorage.setItem('products', JSON.stringify(products));
      }

     
      function renderProducts() {
        elements.productTable.innerHTML = '';
        products.forEach(product => {
          const row = document.createElement('tr');
          row.dataset.id = product.id;
          row.innerHTML = `
            <td>${product.id}</td>
            <td>${product.name}</td>
            <td>${product.category}</td>
            <td>${product.quantity}</td>
            <td>${product.min}</td>
            <td>${product.date}</td>
            <td>
              <button class="edit-btn" data-id="${product.id}">‚úèÔ∏è</button>
              <button class="delete-btn" data-id="${product.id}">üóëÔ∏è</button>
            </td>
          `;
          elements.productTable.appendChild(row);
          
          row.querySelector('.edit-btn').addEventListener('click', (e) => {
            e.stopPropagation();
            editProduct(e.target.dataset.id);
          });
          
          row.querySelector('.delete-btn').addEventListener('click', (e) => {
            e.stopPropagation();
            deleteProduct(e.target.dataset.id);
          });
        });
      }

    
      function renderAlerts() {
        elements.alertsList.innerHTML = '';
        
       
        const alerts = [];
        
      
        products.forEach(product => {
          if (product.quantity <= product.min) {
            alerts.push({
              type: 'warning',
              message: `–¢–æ–≤–∞—Ä "${product.name}" (ID: ${product.id}) –æ—Å—Ç–∞–ª–æ—Å—å ${product.quantity} —à—Ç. –ø—Ä–∏ –º–∏–Ω–∏–º–∞–ª—å–Ω–æ–º –∑–∞–ø–∞—Å–µ ${product.min} —à—Ç.`
            });
          } else if (product.quantity <= product.min + 5) { // –ë—É—Ñ–µ—Ä –≤ 5 –µ–¥–∏–Ω–∏—Ü
            alerts.push({
              type: 'info',
              message: `–¢–æ–≤–∞—Ä "${product.name}" (ID: ${product.id}) –æ—Å—Ç–∞–ª–æ—Å—å ${product.quantity} —à—Ç. –ø—Ä–∏ –º–∏–Ω–∏–º–∞–ª—å–Ω–æ–º –∑–∞–ø–∞—Å–µ ${product.min} —à—Ç.`
            });
          }
        });
        
        
        if (alerts.length === 0) {
          alerts.push({
            type: 'info',
            message: '–ù–µ—Ç –∫—Ä–∏—Ç–∏—á–µ—Å–∫–∏—Ö –æ–ø–æ–≤–µ—â–µ–Ω–∏–π. –í—Å–µ —Ç–æ–≤–∞—Ä—ã –≤ –¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ–º –∫–æ–ª–∏—á–µ—Å—Ç–≤–µ.'
          });
        }
        
        alerts.forEach(alert => {
          const li = document.createElement('li');
          li.className = `alert-item ${alert.type}`;
          li.textContent = alert.message;
          elements.alertsList.appendChild(li);
        });
      }

     
      function renderReports() {
        elements.reportsTable.innerHTML = '';
        
        
        const reports = products.map(product => {
          const sold = getRandomInt(10, 200);
          const price = getRandomInt(1000, 20000);
          const revenue = sold * price;
          
          return {
            id: product.id,
            name: product.name,
            quantity: product.quantity,
            lastWriteOff: getRandomDate(new Date(2020, 0, 1), new Date()),
            sold: sold,
            revenue: revenue
          };
        });
        
        reports.forEach(report => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${report.id}</td>
            <td>${report.name}</td>
            <td>${report.quantity}</td>
            <td>${report.lastWriteOff}</td>
            <td>${report.sold}</td>
            <td>${report.revenue.toLocaleString('ru-RU')} ‚ÇΩ</td>
          `;
          elements.reportsTable.appendChild(row);
        });
      }

      
      function editProduct(productId) {
        const product = products.find(p => p.id === productId);
        if (!product) return;
        
        
        document.getElementById('product-id').value = product.id;
        document.getElementById('product-name').value = product.name;
        document.getElementById('product-category').value = product.category;
        document.getElementById('product-quantity').value = product.quantity;
        document.getElementById('product-min').value = product.min;
        document.getElementById('product-date').value = product.date;
        
       
        showPage('add');
        
       
        const submitBtn = document.querySelector('#add-product-form button');
        submitBtn.textContent = '–û–±–Ω–æ–≤–∏—Ç—å —Ç–æ–≤–∞—Ä';
        submitBtn.dataset.editing = productId;
      }

     
      function deleteProduct(productId) {
        if (confirm(`–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —Ç–æ–≤–∞—Ä —Å ID ${productId}?`)) {
          products = products.filter(p => p.id !== productId);
          saveProducts();
          renderProducts();
          showNotification(`–¢–æ–≤–∞—Ä —Å ID ${productId} —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω`);
        }
      }

    
      function showPage(pageId) {
        elements.pages.forEach(page => {
          page.style.display = 'none';
        });
        
        const page = document.querySelector(`.${pageId}-page`);
        if (page) {
          page.style.display = 'block';
        }
        
        elements.navButtons.forEach(btn => {
          btn.classList.toggle('active', btn.dataset.page === pageId);
        });

       
        if (pageId === 'add') {
          document.getElementById('add-product-form').reset();
          const submitBtn = document.querySelector('#add-product-form button');
          submitBtn.textContent = '–î–æ–±–∞–≤–∏—Ç—å —Ç–æ–≤–∞—Ä';
          submitBtn.removeAttribute('data-editing');
        }

        if (pageId === 'products') renderProducts();
        if (pageId === 'alerts') renderAlerts();
        if (pageId === 'reports') renderReports();
      }

     
      elements.addForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const isEditing = this.querySelector('button').dataset.editing;
        const productId = document.getElementById('product-id').value;
        
       
        const dateRegex = /^\d{2}\.\d{2}\.\d{4}$/;
        const dateValue = document.getElementById('product-date').value;
        if (dateValue && !dateRegex.test(dateValue)) {
          showNotification('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –¥–∞—Ç—ã. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –î–î.–ú–ú.–ì–ì–ì–ì', true);
          return;
        }
        
        if (isEditing) {
        
          const index = products.findIndex(p => p.id === isEditing);
          if (index !== -1) {
            products[index] = {
              id: productId,
              name: document.getElementById('product-name').value,
              category: document.getElementById('product-category').value,
              quantity: parseInt(document.getElementById('product-quantity').value),
              min: parseInt(document.getElementById('product-min').value),
              date: dateValue || products[index].date
            };
            
            saveProducts();
            showNotification('–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ –æ–±–Ω–æ–≤–ª–µ–Ω');
            showPage('products');
          }
        } else {
         
          if (products.some(p => p.id === productId)) {
            showNotification('–¢–æ–≤–∞—Ä —Å —Ç–∞–∫–∏–º ID —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç!', true);
            return;
          }
          
          const newProduct = {
            id: productId,
            name: document.getElementById('product-name').value,
            category: document.getElementById('product-category').value,
            quantity: parseInt(document.getElementById('product-quantity').value),
            min: parseInt(document.getElementById('product-min').value),
            date: dateValue || new Date().toLocaleDateString('ru-RU')
          };
          
          products.push(newProduct);
          saveProducts();
          showNotification('–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω');
          this.reset();
          showPage('products');
        }
      });

    
      elements.navButtons.forEach(btn => {
        btn.addEventListener('click', () => showPage(btn.dataset.page));
      });

    
      elements.generateReportBtn?.addEventListener('click', () => {
        renderReports();
        showNotification('–û—Ç—á–µ—Ç —É—Å–ø–µ—à–Ω–æ —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω');
      });


      document.querySelector('.photo-upload-btn')?.addEventListener('click', function() {
        document.getElementById('product-photo').click();
      });
      
  
      document.getElementById('product-photo')?.addEventListener('change', function(e) {
        if (e.target.files.length > 0) {
          showNotification('–§–æ—Ç–æ —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω–æ');
        }
      });

    
      renderProducts();
      showPage('products');
    });
  </script>
</body>
</html>
